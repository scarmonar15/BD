<h1>Listing counselings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Adviser</th>
      <th>Classroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counselings.each do |counseling| %>
      <tr>
        <td><%= counseling.date %></td>
        <td><%= counseling.adviser %></td>
        <td><%= counseling.classroom %></td>
        <td><%= link_to 'Show', counseling %></td>
        <td><%= link_to 'Edit', edit_counseling_path(counseling) %></td>
        <td><%= link_to 'Destroy', counseling, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

